/**
 * Fetches all available answers to the indication in question, based on the taxonomy term Ábendingategund
 *
 * @param $indication_type_ref
 * @return array
 */
function _rvk_ticketing_fetch_available_answers($indication_type_ref) {
  $results = null;
  $query = new EntityFieldQuery();
  $result = $query
    ->entityCondition('entity_type', 'node')
    ->propertyCondition('type', 'common_answers_to_indications')
    ->fieldCondition('field_svid', 'tid', $indication_type_ref['und'], 'IN')
    ->execute();

  if($result) {
    $results = entity_load('node', array_keys($result['node']));
  }

  return $results;
}

/**
 * Searches for certain revision data for node and returns it.
 *
 * @param $node
 * @return array
 */
function _rvk_ticketing_get_revisions($node) {
  $revisions = node_revision_list($node);
  $fields = array(
    array(
      'name' => 'Svar',
      'class' => 'answer',
      'field_name' => 'field_indication_response_value',
      'field_revision_name' => 'field_revision_field_indication_response',
      'value_name' => 'field_indication_response_value',
    ),
    array(
      'name' => 'Túlkuð ábending',
      'class' => 'interpered_incident_text',
      'field_name' => 'field_interpered_indication_text',
      'field_revision_name' => 'field_revision_field_interpered_indication_text',
      'value_name' => 'field_interpered_indication_text_value',
    ),
    array(
      'name' => 'Staða',
      'class' => 'status',
      'field_name' => 'field_indication_status_ref',
      'field_revision_name' => 'field_revision_field_indication_status_ref',
      'value_name' => 'field_indication_status_ref_tid',
    ),
    array(
      'name' => 'Viðkvæmar upplýsingar',
      'class' => 'delicate_info',
      'field_name' => 'field_delicate_info',
      'field_revision_name' => 'field_revision_field_delicate_info',
      'value_name' => 'field_delicate_info_value',
    ),
    array(
      'name' => 'Tryggingamál',
      'class' => 'indication_insurance_prob',
      'field_name' => 'field_indication_insurance_prob',
      'field_revision_name' => 'field_revision_field_indication_insurance_prob',
      'value_name' => 'field_indication_insurance_prob_value',
    ),
    array(
      'name' => 'Innri samskipti',
      'class' => 'indication_int_comm',
      'field_name' => 'field_indication_int_comm',
      'field_revision_name' => 'field_revision_field_indication_int_comm',
      'value_name' => 'field_indication_int_comm_value',
    ),
    array(
      'name' => 'Áframsenda á utandaðkomandi deild',
      'class' => 'forward_to_external_dp',
      'field_name' => 'field_forward_to_external_dp',
      'field_revision_name' => 'field_revision_field_forward_to_external_dp',
      'value_name' => 'field_forward_to_external_dp_tid',
    ),
    array(
      'name' => 'Áframsenda á utanaðkomandi tölvupóstfang',
      'class' => 'forward_to_external_email',
      'field_name' => 'field_forward_to_external_email',
      'field_revision_name' => 'field_revision_field_forward_to_external_email',
      'value_name' => 'field_forward_to_external_email_value',
    ),
  );
  $revision_array = array();

  foreach($fields as $field) {
    $query_string = 'SELECT r.revision_id, r.delta, r.' . $field["value_name"] . ' FROM {' . $field["field_revision_name"] . '} r WHERE r.entity_id = :nid ORDER BY r.revision_id ASC';

    $result = db_query($query_string,
      array(':nid' => $node->nid)
    );

    $last_value = "";
    $data_value = "";
    $original_value = false;

    foreach($result as $data) {
      //If the data was set during node creation
      if($data->revision_id != $node->nid) {
        if(strstr($field['value_name'], 'tid')) {
          $term = taxonomy_term_load($data->{$field['value_name']});
          $data_value = $term->name;
        }
        else {
          if(strcmp($data->{$field['value_name']}, 0) == 0) {
            $data_value = "Nei";
          }
          else if(strcmp($data->{$field['value_name']}, 1) == 0) {
            $data_value = "Já";
          }
          else {
            $data_value = $data->{$field['value_name']};
          }
        }
      }
      else {
        $original_value = true;
      }

      $revision_id = $data->revision_id;

      if(strcmp($last_value, $data_value) != 0) {
        $revision_array[$field['name']][] = array(
          'changed' => $revisions[$revision_id]->timestamp,
          'changed_by' => $revisions[$revision_id]->name,
          'revision_id' => $revision_id,
          'last_value' => $last_value,
          'new_value' => $data_value,
          'original_value' => $original_value,
          'delta' => $data->delta,
          'class' => $field['class'],
        );
      }

      $last_value = $data_value;
    }
  }

  $indication_tax_fields = array(
    'name' => 'Ábendingategund',
    'class' => 'indication_type_ref',
    'field_name' => 'field_indication_type_ref',
    'field_revision_name' => 'field_revision_field_indication_type_ref',
    'value_name' => 'field_indication_type_ref_tid',
  );

  $indication_query_string = 'SELECT r.revision_id, r.delta, r.' . $indication_tax_fields["value_name"] . ' FROM {' . $indication_tax_fields["field_revision_name"] . '} r WHERE r.entity_id = :nid ORDER BY r.revision_id ASC';
  $indication_result = db_query($indication_query_string,
    array(':nid' => $node->nid)
  );

  $indication_data_array = array();
  foreach($indication_result as $indication_data) {
    $indication_data_array[$indication_data->revision_id][] = $indication_data;
  }

  $last_value = "";
  $original_value = false;

  foreach($indication_data_array as $ida) {
    $string = "";
    $size = sizeof($ida);
    for ($index = 0; $index < $size; $index++) {
      if ($index == 0) {
        $string = taxonomy_term_load($ida[$index]->field_indication_type_ref_tid)->name;
      } else {
        $string .= " => " . taxonomy_term_load($ida[$index]->field_indication_type_ref_tid)->name;
      }
    }

    $data_value = $string;
    $revision_id = $ida[0]->revision_id;

    if (strcmp($last_value, $data_value) != 0) {
      $revision_array[$indication_tax_fields['name']][] = array(
        'changed' => $revisions[$revision_id]->timestamp,
        'changed_by' => $revisions[$revision_id]->name,
        'revision_id' => $revision_id,
        'last_value' => $last_value,
        'new_value' => $data_value,
        'original_value' => $original_value,
        'delta' => 0,
        'class' => $indication_tax_fields['class'],
      );

      $last_value = $data_value;
    }
  }

  return $revision_array;
}

/**
 * Creates table out of revision data and returns it
 *
 * @param $revisions
 * @return string
 * @throws Exception
 */
function _rvk_ticketing_get_revisions_markup($revisions) {
  $table_data = array();
  $header = array('Hvað?', 'Dags.', 'Gamla gildið', 'Nýja gildið', 'Breytt af');
  foreach($revisions as $title => $revision) {
    foreach($revision as $rev) {
      $row = array(
          $title,
          date('d.m.Y H:i:s', $rev['changed']),
          ($rev['delta'] == 0) ? $rev['last_value'] : '',
          $rev['new_value'],
          $rev['changed_by'],
      );

      $table_data[] = array('data' => $row, 'class' => array($rev['class']));
    }
  }

  return theme('table', array('header' => $header, 'rows' => $table_data));
}

/**
 * Implements hook_node_presave().
 *
 * @throws Exception
 */
function rvk_ticketing_node_presave($node) {
  if($node->type == 'indications' && $node->is_new == FALSE) {
    $indication_type_voc = taxonomy_vocabulary_machine_name_load('indication_types');
    $service_desk_tid = _rvk_ticketing_find_indication_status_by_name($indication_type_voc->vid, 'Þjónustuver');
    $indication_status_voc = taxonomy_vocabulary_machine_name_load('indication_status');
    $indication_new_tax = _rvk_ticketing_find_indication_status_by_name($indication_status_voc->vid, 'Ný ábending');
    $indication_received_tax = _rvk_ticketing_find_indication_status_by_name($indication_status_voc->vid, 'Móttekin');

    // If the status is not set, it's because we're going through the initial save of the node. Set the status to
    // Þjónustuver, but do not go through any of the other test cases.
    if(!isset($node->field_indication_type_ref[LANGUAGE_NONE][0])) {
      $node->field_indication_type_ref[LANGUAGE_NONE][0]['tid'] = $service_desk_tid->tid;
      $node->field_indication_responded_at[LANGUAGE_NONE][0] = NULL;
      $node->field_indication_close_by[LANGUAGE_NONE][0] = NULL;
      $node->field_indication_closed_at[LANGUAGE_NONE][0] = NULL;
    }
    else {
      //If the indication is being sent to external department (as configured in a taxonomy), we'll just close the
      //Indication
      if(isset($node->field_forward_to_external_dp[LANGUAGE_NONE][0]) ||
        isset($node->field_forward_to_external_email[LANGUAGE_NONE][0])) {
        if(isset($node->field_forward_to_external_dp[LANGUAGE_NONE][0]['tid']) ||
          isset($node->field_forward_to_external_email[LANGUAGE_NONE][0]['value'])) {
          $indication_tax = _rvk_ticketing_find_indication_status_by_name($indication_status_voc->vid, 'Lokið');
          $node->field_indication_status_ref[LANGUAGE_NONE][0]['tid'] = $indication_tax->tid;
        }
      }

      //If service desk is changing the indication type reference to another department, check if they have changed the
      //status of the indication, and if not, change it to received.
      if($node->field_indication_type_ref[LANGUAGE_NONE][0]['tid'] != $service_desk_tid->tid) {
        if($node->field_indication_status_ref[LANGUAGE_NONE][0]['tid'] == $indication_new_tax->tid) {
          $node->field_indication_status_ref[LANGUAGE_NONE][0]['tid'] = $indication_received_tax->tid;
        }
      }

      //If there is text in the indication response or the status is no longer Ný ábending, we'll create a new timestamp
      // and log the time it was answered.
      if(isset($node->field_indication_response[LANGUAGE_NONE][0]) ||
        $node->field_indication_status_ref[LANGUAGE_NONE][0]['tid'] != $indication_new_tax->tid) {
        if(!isset($node->field_indication_responded_at[LANGUAGE_NONE][0])) {
          $respond_at = new DateTime('now');
          $respond_at = $respond_at->format('Y-m-d H:i:s');
          $respond_at = str_replace(' ', 'T', $respond_at);
          $node->field_indication_responded_at[LANGUAGE_NONE][0]['value'] = $respond_at;
          $node->field_indication_responded_at[LANGUAGE_NONE][0]['timezone'] = 'Atlantic/Reykjavik';
        }
      }

      //If there is a timestamp for when the indication was answered for the first time, we need to calculate when the
      //indication has to be closed completely
      if(isset($node->field_indication_responded_at[LANGUAGE_NONE][0])) {
        if(!isset($node->field_indication_close_by[LANGUAGE_NONE][0])) {
          if(isset($node->field_indication_type_ref[LANGUAGE_NONE][0])) {
            $indication_category = taxonomy_term_load($node->field_indication_type_ref[LANGUAGE_NONE][0]['tid']);

            $second_response_time = rvk_ticketing_get_last_response_date(
              new DateTime('now'), $indication_category->field_indication_response_time[LANGUAGE_NONE][0]['value']
            )->format('Y-m-d H:i:s');
            $second_response_time = str_replace(' ', 'T', $second_response_time);
          }
          else {
            $second_response_time = rvk_ticketing_get_last_response_date(
              new DateTime('now'), 2
            )->format('Y-m-d H:i:s');
            $second_response_time = str_replace(' ', 'T', $second_response_time);
          }

          $node->field_indication_close_by[LANGUAGE_NONE][0]['value'] = $second_response_time;
          $node->field_indication_close_by[LANGUAGE_NONE][0]['timezone'] = 'Atlantic/Reykjavik';
        }
      }

      //If the indication is closed, we need to record that timestamp, and also fill inn all the other timestamps that
      //are missing (e.g. if the indication is closed right away).
      if(isset($node->field_indication_status_ref[LANGUAGE_NONE][0])) {
        $status_term = taxonomy_term_load($node->field_indication_status_ref[LANGUAGE_NONE][0]['tid']);
        if($status_term->name == "Lokið") {
          if(!isset($node->field_indication_respond_by[LANGUAGE_NONE][0])) {
            $respond_by = rvk_ticketing_get_last_response_date(
              new DateTime('now'), 2
            )->format('Y-m-d H:i');
            $respond_by = str_replace(' ', 'T', $respond_by);
            $node->field_indication_respond_by[LANGUAGE_NONE][0]['value'] = $respond_by;
            $node->field_indication_respond_by[LANGUAGE_NONE][0]['timezone'] = 'Atlantic/Reykjavik';
          }
          if(!isset($node->field_indication_responded_at[LANGUAGE_NONE][0])) {
            $responded_at = new DateTime('now');
            $responded_at = $responded_at->format('Y-M-d H:i:s');
            $responded_at = str_replace(' ', 'T', $responded_at);
            $node->field_indication_responded_at[LANGUAGE_NONE][0]['value'] = $responded_at;
            $node->field_indication_responded_at[LANGUAGE_NONE][0]['timezone'] = 'Atlantic/Reykjavik';
          }
          if(!isset($node->field_indication_close_by[LANGUAGE_NONE][0])) {
            $close_by = rvk_ticketing_get_last_response_date(
              new DateTime('now'), 2
            )->format('Y-m-d H:i');
            $close_by = str_replace(' ', 'T', $close_by);
            $node->field_indication_close_by[LANGUAGE_NONE][0]['value'] = $close_by;
            $node->field_indication_close_by[LANGUAGE_NONE][0]['timezone'] = 'Atlantic/Reykjavik';
          }
          if(!isset($node->field_indication_closed_at[LANGUAGE_NONE][0])) {
            $closed_at = new DateTime('now');
            $closed_at = $closed_at->format('Y-m-d H:i:s');
            $closed_at = str_replace(' ', 'T', $closed_at);
            $node->field_indication_closed_at[LANGUAGE_NONE][0]['value'] = $closed_at;
            $node->field_indication_closed_at[LANGUAGE_NONE][0]['timezone'] = 'Atlantic/Reykjavik';
          }
        }
      }

      // THIS SHUTDOWN FUNCTION CALLED HAS BEEN DISABLED. SEE COMMENT FOR THE FUNCTION ITSELF!!!!
      // If the Insurance problem checkbox is checked and the node has not been cloned before, we clone the node,
      // leaving the original indication intact. This is because of the nature of the indication. Hole repairs is one
      // issue, dealing with the insurance part is another.
      /**
      if(isset($node->field_indication_insurance_prob[LANGUAGE_NONE])) {
        if($node->field_indication_insurance_prob[LANGUAGE_NONE][0]['value'] == TRUE &&
           $node->field_indication_cloned[LANGUAGE_NONE][0]['value'] != TRUE) {
          $node->field_indication_cloned[LANGUAGE_NONE][0]['value'] = TRUE;
          drupal_register_shutdown_function(
            '_rvk_ticketing_clone_insurance_node',
            $node,
            $indication_type_voc,
            $indication_status_voc);
        }
      }*/
    }
  }
}

/**
 * NOTE!!! THIS METHOD HAS BEEN DISABLED, SINCE THE FUNCTIONALITY WAS REMOVED.
 * I still leave it here, if the decision is reversed. (drupalviking)
 *
 * Shutdown function for node_presave, to clone the node, if the node has been marked insurance problem.
 *
 * @param $node
 * @throws Exception
 */
function _rvk_ticketing_clone_insurance_node($node, $indication_type_voc, $indication_status_voc) {
  $cloned_node = clone($node);
  $cloned_node->title = $cloned_node->title . " - Afrit vegna tryggingamáls";
  $cloned_node->is_new = TRUE;
  unset($cloned_node->nid);
  unset($cloned_node->vid);
  unset($cloned_node->tnid);

  //Create a new respond by time stamp and clear all other timestamps
  $respond_by = rvk_ticketing_get_last_response_date(
    new DateTime('now'), 2
  )->format('Y-m-d H:i');
  $respond_by = str_replace(' ', 'T', $respond_by);
  $cloned_node->field_indication_respond_by[LANGUAGE_NONE][0]['value'] = $respond_by;
  unset($cloned_node->field_indication_responded_at[LANGUAGE_NONE]);
  unset($cloned_node->field_indication_close_by[LANGUAGE_NONE]);
  unset($cloned_node->field_indication_closed_at[LANGUAGE_NONE]);
  unset($cloned_node->path);
  $cloned_node->field_indication_cloned[LANGUAGE_NONE][0]['value'] = TRUE;
  $cloned_node->field_indication_original_node[LANGUAGE_NONE][0]['target_id'] = $node->nid;

  $indication_tax = _rvk_ticketing_find_indication_status_by_name($indication_status_voc->vid, 'Móttekin');
  $cloned_node->field_indication_status_ref[LANGUAGE_NONE][0]['tid'] = $indication_tax->tid;
  $insurance_tid = _rvk_ticketing_find_indication_status_by_name($indication_type_voc->vid, 'Tryggingamál');
  unset($node->field_indication_type_ref);
  $cloned_node->field_indication_type_ref[LANGUAGE_NONE][0]['tid'] = $insurance_tid->tid;

  node_save($cloned_node);
}
/**
 * Implements hook_form_validate().
 */
function rvk_ticketing_create_ticket_form_validate($form, &$form_state) {
  $values = $form_state['values'];

  if(strlen($values['indication_fieldset']['map_fieldset']['address']['address']) > 0) {
    if(!rvk_ticketing_check_street_address_valid($values['indication_fieldset']['map_fieldset']['address']['address'])) {
      form_set_error('address', RVK_TICKETING_ADDRESS_INVALID_ERROR_MESSAGE);
    }
  }

  if($values['indication_fieldset']['map_fieldset']['dont_use_map'] == FALSE) {
    if(strlen($values['indication_fieldset']['map_fieldset']['xcoords']) == 0) {
      form_set_error('map_location', RVK_TICKETING_MAP_INFO_NOT_SUPPLIED_ERROR_MESSAGE);
    }
  }
}

/**
 * Implements hook_form_submit().
 *
 * @throws Exception
 */
function rvk_ticketing_create_ticket_form_submit($form, &$form_state) {
  $values = $form_state['values'];

  if(isset($values['indication_fieldset'])) {
    if(isset($values['indication_fieldset']['image_fieldset'])) {
      if(isset($values['indication_fieldset']['image_fieldset']['image'])) {
        foreach($values['indication_fieldset']['image_fieldset']['image'] as $key => $image) {
          if(is_numeric($key)) {
            if($image != 0) {
              $file = file_load((int)$image);
              $file->status = FILE_STATUS_PERMANENT;
              file_save($file);
              $values['images'][] = $file;
            }
            else {
              if(!isset($values['images'])) {
                $values['images'] = null;
              }
            }
          }
        }
      }
    }
  }

  if(strlen($values['indication_fieldset']['map_fieldset']['xcoords']) == 0
    && strlen($values['indication_fieldset']['map_fieldset']['ycoords']) == 0
    && strlen($values['indication_fieldset']['map_fieldset']['address']['address']) > 0) {
    //Send another query to the Street lookup API, to get the X and Y coords
    $street = borgarvefsja_search_by_address($values['indication_fieldset']['map_fieldset']['address']['address']);
    $values['indication_fieldset']['map_fieldset']['xcoords'] = $street[0]['x'];
    $values['indication_fieldset']['map_fieldset']['ycoords'] = $street[0]['y'];
  }

  $node = rvk_ticketing_create_indication_node($values);

  drupal_goto(variable_get('rvk_ticketing_thank_you_page'), array(
      "query" => array(
        "nid" => $node->nid
      ),
    )
  );
}

/**
 * Creates one indication node, based on the values the user submits.
 *
 * @param array $data The data comes from a form
 * @return \stdClass
 * @throws Exception
 */
function rvk_ticketing_create_indication_node($data) {
  $node = new stdClass();
  $node->title = $data['indication_fieldset']['indication_text_fieldset']['title'];
  $node->type = 'indications';
  node_object_prepare($node);

  $node->field_indication_text[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['indication_text_fieldset']['content'];
  $node->field_interpered_indication_text[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['indication_text_fieldset']['content'];
  if(strlen($data['indication_fieldset']['map_fieldset']['address']['address']) > 0) {
    $node->field_indication_location[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['map_fieldset']['address']['address'];
    if(strlen($data['indication_fieldset']['map_fieldset']['xcoords']) > 0) {
      $node->field_indication_position_x[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['map_fieldset']['xcoords'];
      $node->field_indication_position_y[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['map_fieldset']['ycoords'];
    }
  }
  elseif(strlen($data['indication_fieldset']['map_fieldset']['xcoords']) > 0) {
    $node->field_indication_position_x[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['map_fieldset']['xcoords'];
    $node->field_indication_position_y[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['map_fieldset']['ycoords'];
    $node->field_indication_neighborhood[LANGUAGE_NONE][0]['value'] = $data['indication_fieldset']['map_fieldset']['neighborhood'];
    $neighborhood_arr = _rvk_ticketing_explode_neighborhood_string($data['indication_fieldset']['map_fieldset']['neighborhood']);
    $node->field_indication_neighborhoodref[LANGUAGE_NONE][0]['tid'] =
      _rvk_ticketing_get_term_from_neighborhood_number($neighborhood_arr['number'])->tid;
  }

  if(strlen($data['personal_info_fieldset']['person']['name']) > 0) {
    $node->field_indication_reporter_name[LANGUAGE_NONE][0]['value'] = $data['personal_info_fieldset']['person']['name'];
  }

  if(strlen($data['personal_info_fieldset']['person']['email']) > 0) {
    $node->field_indication_reporter_email[LANGUAGE_NONE][0]['value'] = $data['personal_info_fieldset']['person']['email'];
  }
  if(strlen($data['personal_info_fieldset']['person']['tel']) > 0) {
    $node->field_indication_reporter_phone[LANGUAGE_NONE][0]['value'] = $data['personal_info_fieldset']['person']['tel'];
  }

  $tax_vocabulary = taxonomy_vocabulary_machine_name_load('indication_status');
  $taxonomy = taxonomy_get_tree($tax_vocabulary->vid);
  $status_default_tid = null;
  foreach($taxonomy as $tax) {
    if($tax->name == 'Ný ábending') {
      $status_default_tid = $tax->tid;
    }
  }

  if(is_array($data['images'])) {
    foreach($data['images'] as $image) {
      $node->field_image[LANGUAGE_NONE][]['fid'] = $image->fid;
    }
  }

  $node->field_indication_status_ref[LANGUAGE_NONE][0]['tid'] = $status_default_tid;
  $node->language = 'is';
  $node->is_new = true;

  node_save($node);

  $response_time = RVK_TICKETING_SERVICE_DESK_DAYS_TO_RESPOND;
  $respond_by = strftime('%Y-%m-%d %H:%M:%S', $node->created);
  $respond_by = rvk_ticketing_get_last_response_date(
    new DateTime($respond_by), $response_time
  )->format('Y-m-d H:i:s');

  $respond_by = str_replace(' ', 'T', $respond_by);
  $node->field_indication_respond_by[LANGUAGE_NONE][0]['value'] = $respond_by;
  $node->field_indication_respond_by[LANGUAGE_NONE][0]['timezone'] = 'Atlantic/Reykjavik';
  node_save($node);

  return $node;
}


