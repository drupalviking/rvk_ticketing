function _rvk_ticketing_get_term_from_neighborhood_number($number) {
  $neighborhood_type_voc = taxonomy_vocabulary_machine_name_load('hverfi');

  $results = null;
  $query = new EntityFieldQuery;
  $result = $query
    ->entityCondition('entity_type', 'taxonomy_term')
    ->propertyCondition('vid', $neighborhood_type_voc->vid)
    ->fieldCondition('field_neighborhood_nr_lukr', 'value', $number, '=')
    ->execute();

  if (!empty($result['taxonomy_term'])) {
    $results = entity_load('taxonomy_term', array_keys($result['taxonomy_term']));
    $results = array_values($results);
    $results = $results[0];
  }

  return $results;
}

function _rvk_ticketing_explode_neighborhood_string($str) {
  $pos_of_period = strpos($str, '.');
  $return_arr['number'] = substr($str, 0, $pos_of_period);
  $return_arr['string'] = substr($str, $pos_of_period + 2);

  return $return_arr;
}

